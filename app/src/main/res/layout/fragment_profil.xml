<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingLeft="50dp"
            android:text="Prenom :"></TextView>


        <TextView
            android:id="@+id/txtProfilPrenom"
            android:textColor="@color/colorVertBabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="120dp"
            android:text="Prenom"></TextView>
        <TextView
            android:text="Nom :"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="50dp">
        </TextView>

        <TextView
            android:id="@+id/txtProfilNom"
            android:text="Nom"
            android:textColor="@color/colorVertBabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:paddingLeft="120dp">
        </TextView>

        <TextView
            android:text="Email :"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="50dp">
        </TextView>

        <TextView
            android:id="@+id/txtProfilEmail"
            android:text="Email"
            android:textColor="@color/colorVertBabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:paddingLeft="120dp">
        </TextView>


        <TextView
            android:text="Login :"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="240dp">
        </TextView>

        <TextView
            android:id="@+id/txtProfilLogin"
            android:textColor="@color/colorVertBabs"
            android:text="@string/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="300dp">
        </TextView>



    </RelativeLayout>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kit2"
        style="@style/SpinKitView.Large.CubeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:SpinKit_Color="@color/colorAccent" />
    <Button
        android:id="@+id/btnSaveYear"
        android:text="@string/nouvelle_annee"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="275dp"
        android:layout_height="wrap_content"></Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListAnneRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>